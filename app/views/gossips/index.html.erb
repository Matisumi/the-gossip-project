<h1>All posted gossips</h1>
<%= link_to 'I got a gossip!', new_gossip_path %>
<table>
  <tr>
    <th>From</th>
    <th>Gossip</th>
    <th colspan="3"></th>
  </tr>
 
  <% @gossip.each do |gossip| %>
    <tr>
      <td><%= gossip.anonymous_author %></td>
      <td><em><%= gossip.content %></em></td>
      <td><%= link_to 'Show', gossip_path(gossip) %></td>
      <td><%= link_to 'Edit', edit_gossip_path(gossip) %></td>
      <td><%= link_to 'Delete', gossip_path(gossip),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>